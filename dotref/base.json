{
  "vars": {
    "git_profile": "personal"
  },
  "create": [
    { "name": "~/.config/git" },
    { "name": "~/.local/state", "mode": "700" },
    { "name": "~/.local/state/bash", "mode": "700" }
  ],
  "link": [
    { "src": "profile", "dst": "~/.profile" },
    { "src": "fish", "dst": "~/.config/fish" },
    { "src": "tig", "dst": "~/.config/tig" },
    { "src": "tmux", "dst": "~/.config/tmux" },
    { "src": "htop", "dst": "~/.config/htop" },
    { "src": "vifm", "dst": "~/.config/vifm" },
    { "src": "nvim", "dst": "~/.config/nvim" },
    { "src": "git/personal", "dst": "~/.config/git/personal" },
    { "src": "git/work", "dst": "~/.config/git/work" }
  ],
  "template": [
    { "src": "git/config.tpl", "dst": "~/.config/git/config" }
  ]
}

