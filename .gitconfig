[apply]
    # Warn on whitespace errors when applying a patch
    whitespace = warn

[core]
    editor = vim
    whitespace = trailing-space,-space-before-tab

    # Convert CRLF to LF on commit
    autocrlf = input

[diff]
    algorithm = histogram
    renames = copies
    tool = vimdiff

[merge]
    tool = vimdiff

[push]
    default = simple

[log]
    decorate = short
    abbrevCommit = true

[pretty]
    dense = '%C(bold green)%h%Creset: %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset'

